#!/usr/bin/env ruby

$:.unshift File.expand_path(File.dirname(__FILE__) + "/../lib")
Dir.chdir ".."

require "get_d3_key_from_twitter"

TWITTER_LOGIN = File.read "twitter_login"

TRACK_TOPICS = "track=BlizzardCS,cpkfolief,RyanBerckmans,soccer"

BLIZZARDCS_ID = "174307074"
RYAN_BERCKMANS_ID = "546460454"
FOLLOW_USERS = "follow=" + BLIZZARDCS_ID + "," + RYAN_BERCKMANS_ID

BLIZZARD_SCREEN_NAME = "RyanBerckmans"

d3_key = get_d3_key_from_twitter TWITTER_LOGIN, FOLLOW_USERS, BLIZZARD_SCREEN_NAME
puts "exiting with d3 key: #{d3_key}"

